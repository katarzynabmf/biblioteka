@model IEnumerable<Firma.Data.Data.Sklep.Towar>
@{
    var rowCount = Model.Count();
}
    <ul class="list-group list-group-flush">
        @foreach (var item in Model.TakeLast(2))
        {         
            <li class="list-group-item">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-body">
                        <h6 class="card-title">@item.Opis</h6>
                        <div class="card-image">
                            <img src=@item.FotoURL>
                            <p class="card-text"><small class="text-muted">Dodano 3 dni temu</small></p>
                        </div>
                        </div>
                    </div>
                </div>
            </li>
         }
    </ul>

