@model IEnumerable<Firma.Data.Data.CMS.Strona>

@{
    ViewData["Title"] = "Index";
}

<h1>Strony</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-dark" data-mdb-color="dark">Dodaj</a>
</p>
<table class="table table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.LinkTytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tytul)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Tresc)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Pozycja)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.LinkTytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tytul)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Tresc)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Pozycja)
            </td>
            <td>
                <div class="btn-group shadow-0" role="group" aria-label="Basic example">
                    <a asp-action="Edit" asp-route-id="@item.IdStrony" class="btn btn-outline-dark" data-mdb-color="dark">Edytuj</a> 
                    <a asp-action="Details" asp-route-id="@item.IdStrony" class="btn btn-outline-dark" data-mdb-color="dark">Szczegóły</a> 
                    <a asp-action="Delete" asp-route-id="@item.IdStrony" class="btn btn-outline-dark" data-mdb-color="dark">Usuń</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>
